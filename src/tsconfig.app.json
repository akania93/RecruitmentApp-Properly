{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "../out-tsc/app",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@angular/*": ["../node_modules/@angular/*"],
      "@nebular/*": ["../node_modules/@nebular/*"],
      "@core": ["app/@core"],
      "@environments": ["environments/index"],
      "@shared": ["app/shared/index"],
      "@helpers": ["app/shared/helpers/index"],
      "@models": ["app/models/index"]
    }
  },
  "files": ["main.ts", "polyfills.ts"],
  "include": ["../src/*.ts", "../src/**/*.d.ts", "../node_modules/@nebular/**/*.ts"]
}
