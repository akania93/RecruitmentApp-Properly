{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "mapRoot": "./dist/out-tsc/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@angular/*": ["../node_modules/@angular/*"],
      "@nebular/*": ["../node_modules/@nebular/*"],
      "@core": ["app/@core"],
      "@environments": ["environments/index"],
      "@shared": ["app/shared/index"],
      "@helpers": ["app/shared/helpers/index"],
      "@models": ["app/models/index"]
    }
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": true
  }
}
