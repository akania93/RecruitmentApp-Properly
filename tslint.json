{
  "rulesDirectory": ["node_modules/codelyzer", "node_modules/tslint-lines-between-class-members"],
  "extends": ["tslint:recommended", "angular-tslint-rules"],
  "linterOptions": {
    "exclude": ["src/polyfills.ts", "src/test.ts", ".prettierrc.js", "tslint.json", "package.json", "package-lock.json", "src/app/@auth/helpers.ts"]
  },
  "rules": {
    "no-implicit-dependencies": false,
    "template-i18n": false,
    "no-floating-promises": false,
    "newline-per-chained-call": false,
    "newline-before-return": false,
    "template-cyclomatic-complexity": false,
    "lines-between-class-members": [
      "error",
      "always",
      {
        "exceptAfterSingleLine": true
      }
    ],
    "max-file-line-count": false,
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^Lazy"
      }
    ],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "private-static-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "unnecessary-constructor": [
      true,
      {
        "check-super-calls": true
      }
    ],
    "directive-class-suffix": true,
    "no-attribute-decorator": true,
    "no-conflicting-lifecycle": true,
    "no-forward-ref": false,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-lifecycle-call": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-pipe-impure": true,
    "no-queries-metadata-property": true,
    "no-unused-css": true,
    "prefer-inline-decorator": true,
    "prefer-output-readonly": true,
    "template-banana-in-box": true,
    "template-conditional-complexity": [true, 4],
    "template-no-negated-async": true,
    "template-use-track-by-function": false,
    "template-no-call-expression": false,
    "use-component-selector": false,
    "use-component-view-encapsulation": true,
    "no-default-export": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "comment-type": [true, "singleline", "multiline", "doc"],
    "eofline": true,
    "forin": true,
    "import-blacklist": [true],
    "import-spacing": true,
    "indent": [true, "spaces"],
    "interface-over-type-literal": true,
    "label-position": true,
    "max-line-length": [true, 150],
    "member-access": false,
    "no-arg": true,
    "no-console": [true, "debug", "time", "timeEnd"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "one-line": [true, "check-open-brace", "check-catch", "check-else", "check-whitespace"],
    "prefer-const": true,
    "quotemark": [true, "single", "avoid-escape"],
    "radix": true,
    "semicolon": [true, "always"],
    "triple-equals": [true, "allow-null-check"],
    "typedef": false,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "variable-name": false,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
    "directive-selector": [true, "attribute", "ngx", "camelCase"],
    "component-selector": [true, "element", "ngx", "kebab-case"],
    "ban": [true, "eval", "fit", "fdescribe"],
    "no-inputs-metadata-property": true,
    "no-outputs-metadata-property": true,
    "no-output-rename": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "no-dynamic-delete": false,
    "strict-boolean-expressions": false,
    "unnecessary-else": false,
    "only-arrow-functions": false,
    "max-classes-per-file": false,
    "component-max-inline-declarations": false,
    "prefer-function-over-method": false,
    "no-void-expression": false
  }
}
